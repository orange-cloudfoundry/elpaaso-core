<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:aop="http://www.springframework.org/schema/aop" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:jpa="http://www.springframework.org/schema/data/jpa"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
		http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop.xsd
		http://www.springframework.org/schema/data/jpa http://www.springframework.org/schema/data/jpa/spring-jpa-1.3.xsd">

	<!-- enable spring data jpa repositories -->
	<jpa:repositories base-package="com.francetelecom.clara.cloud.core.domain" />
	<jpa:repositories base-package="com.francetelecom.clara.cloud.model"/>
	<jpa:repositories base-package="com.francetelecom.clara.cloud.logicalmodel"/>


	<!-- manageTechnicalDeploymentCrud facade -->
	<bean id="manageTechnicalDeploymentCrud"
		class="com.francetelecom.clara.cloud.application.impl.ManageTechnicalDeploymentCrudImpl" />

	<!-- manageTechnicalDeploymentInstance facade -->
	<bean id="manageTechnicalDeploymentInstance"
		class="com.francetelecom.clara.cloud.application.impl.ManageTechnicalDeploymentInstanceImpl" />

	<!-- manageTechnicalDeploymentTemplate facade -->
	<bean id="manageTechnicalDeploymentTemplate"
		class="com.francetelecom.clara.cloud.application.impl.ManageTechnicalDeploymentTemplateImpl" />

	<!-- manageModelItem facade -->
	<bean id="manageModelItem"
		class="com.francetelecom.clara.cloud.application.impl.ManageModelItemImpl" />

	<!-- ModelItem DAO -->
	<bean id="modelItemDao"
		class="com.francetelecom.clara.cloud.dao.impl.ModelItemDaoJpaImpl" />

	<!-- application repository -->
	<bean id="applicationRepository"
		class="com.francetelecom.clara.cloud.core.infrastructure.ApplicationDaoJpaImpl" />

	<!-- projection DAO -->
	<bean id="environmentRepository"
		class="com.francetelecom.clara.cloud.core.infrastructure.EnvironmentDaoJpaImpl" />

	<bean id="transactionUtil" class="com.francetelecom.clara.cloud.dao.impl.TransactionUtil" />

	<!-- applicationRelease repository -->
	<bean id="applicationReleaseRepository"
		class="com.francetelecom.clara.cloud.core.infrastructure.ApplicationReleaseDaoJpaImpl" />

	<!-- Technical Deployment Cloner -->
	<bean id="technicalDeploymentCloner"
		class="com.francetelecom.clara.cloud.dao.impl.TechnicalDeploymentClonerImpl">
	</bean>

	<bean id="logicalDeploymentCloner"
		class="com.francetelecom.clara.cloud.dao.impl.LogicalDeploymentClonerImpl">
	</bean>
	<!-- <bean id="persistentTechnicalDeploymentCloner" -->
	<!-- class="com.francetelecom.clara.cloud.dao.impl.TechnicalDeploymentClonerImpl" -->
	<!-- init-method="initPersistentCloner"> -->
	<!-- <property name="marshaller"> -->
	<!-- <bean parent="xstreamMarshaller" /> -->
	<!-- </property> -->
	<!-- </bean> -->



	<!-- xstream config xstreamMarshaller is used by test only -->
	<bean id="xstreamMarshaller" class="org.springframework.oxm.xstream.XStreamMarshaller"
		scope="prototype">
		<property name="aliases">
			<props>
				<prop key="technicalDeployment">com.francetelecom.clara.cloud.model.TechnicalDeployment
				</prop>
				<prop key="ModelItem">com.francetelecom.clara.cloud.model.ModelItem</prop>
				<prop key="TechnicalDeployment">com.francetelecom.clara.cloud.model.TechnicalDeployment
				</prop>
				<prop key="TechnicalDeploymentInstance">com.francetelecom.clara.cloud.model.TechnicalDeploymentInstance
				</prop>
				<prop key="AuditTrail">com.francetelecom.clara.cloud.model.AuditTrail</prop>

				<prop key="DiscoveryProtocolService">com.francetelecom.clara.cloud.model.services.DiscoveryProtocolService
				</prop>
				<prop key="HttpsProtocolService">com.francetelecom.clara.cloud.model.services.HttpsProtocolService
				</prop>
				<prop key="JonasDiscoveryGreetingProtocolService">com.francetelecom.clara.cloud.model.services.JonasDiscoveryGreetingProtocolService
				</prop>
				<prop key="JonasDiscoveryProtocolService">com.francetelecom.clara.cloud.model.services.JonasDiscoveryProtocolService
				</prop>
				<prop key="JonasReplicationProtocolService">com.francetelecom.clara.cloud.model.services.JonasReplicationProtocolService
				</prop>
				<prop key="JrmpProtocolService">com.francetelecom.clara.cloud.model.services.JrmpProtocolService
				</prop>

				<!-- logical deployment config -->
				<prop key="LogicalSoapConsumer">com.francetelecom.clara.cloud.logicalmodel.LogicalSoapConsumer
				</prop>
				<prop key="LogicalSoapService">com.francetelecom.clara.cloud.logicalmodel.LogicalSoapService
				</prop>
				<prop key="LogicalWebGUIService">com.francetelecom.clara.cloud.logicalmodel.LogicalWebGUIService
				</prop>
				<prop key="JeeProcessing">com.francetelecom.clara.cloud.logicalmodel.JeeProcessing
				</prop>
				<prop key="AbstractProcessingNode">com.francetelecom.clara.cloud.model.AbstractProcessingNode
				</prop>
				<prop key="LogicalNodeServiceAssociation">com.francetelecom.clara.cloud.logicalmodel.LogicalNodeServiceAssociation
				</prop>

			</props>
		</property>

		<property name="annotatedClasses">
			<list>
				<value>com.francetelecom.clara.cloud.model.TechnicalDeployment
				</value>
			</list>
		</property>
	</bean>


	<aop:config>
		<aop:pointcut id="servicePointcut"
			expression="
        	execution(* com.francetelecom.clara.cloud.dao.impl.*.*(..))
        " />
		<aop:aspect id="loggingAspect" ref="aopLogger">
			<aop:before method="logMethodEntry" pointcut-ref="servicePointcut" />
			<aop:after-returning method="logMethodExit"
				returning="result" pointcut-ref="servicePointcut" />
		</aop:aspect>
	</aop:config>
	<bean id="aopLogger" class="com.francetelecom.clara.cloud.dao.AOPLogger" />
</beans>