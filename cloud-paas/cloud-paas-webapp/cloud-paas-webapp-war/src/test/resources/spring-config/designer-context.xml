<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	   xmlns:context="http://www.springframework.org/schema/context"
	   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:jpa="http://www.springframework.org/schema/data/jpa"
	   xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
    http://www.springframework.org/schema/context
    http://www.springframework.org/schema/context/spring-context-2.5.xsd http://www.springframework.org/schema/data/jpa http://www.springframework.org/schema/data/jpa/spring-jpa.xsd">

	<context:annotation-config />

	<import resource="datasources-hsqldb-context.xml" />
	<!-- following import is used to declare a dummy liquibase bean required 
		by the jpa-context init -->
	<import
		resource="classpath:/com/francetelecom/clara/cloud/commons/testconfigurations/mock-liquibase-context.xml" />
	<import
		resource="classpath:/com/francetelecom/clara/cloud/commons/jpa/jpa-context.xml" />
	<import resource="transaction-context.xml" />


	<bean id="propertyConfigurer"
		class="org.springframework.context.support.PropertySourcesPlaceholderConfigurer">
		<property name="locations">
			<list>
				<value>classpath:/com/francetelecom/clara/cloud/commons/testconfigurations/credentials-${datacenter:reference}.properties
				</value>
				<value>classpath:/com/francetelecom/clara/cloud/commons/testconfigurations/config-hibernate-test-hsqldb-create-drop.properties
				</value>
			</list>
		</property>
	</bean>

	<bean id="projectionService" class="org.mockito.Mockito"
		factory-method="mock">
		<constructor-arg
			value="com.francetelecom.clara.cloud.paas.projection.ProjectionService" />
	</bean>

	<!-- IMPORT DAO CONTEXT -->
	<jpa:repositories base-package="com.francetelecom.clara.cloud.logicalmodel"/>
	<jpa:repositories base-package="com.francetelecom.clara.cloud.core.domain"/>
	<jpa:repositories base-package="com.francetelecom.clara.cloud.coremodel"/>



	<bean id="applicationReleaseRepository"
		class="com.francetelecom.clara.cloud.core.infrastructure.ApplicationReleaseDaoJpaImpl" />

	<bean id="technicalDeploymentTemplateRepository" class="org.mockito.Mockito"
		factory-method="mock">
		<constructor-arg
				value="com.francetelecom.clara.cloud.model.TechnicalDeploymentTemplateRepository"/>
	</bean>

	<bean id="technicalDeploymentRepository" class="org.mockito.Mockito"
		factory-method="mock">
		<constructor-arg
				value="com.francetelecom.clara.cloud.model.TechnicalDeploymentRepository"/>
	</bean>

	<bean id="environmentRepository" class="org.mockito.Mockito"
		factory-method="mock">
		<constructor-arg
			value="com.francetelecom.clara.cloud.core.infrastructure.EnvironmentDaoJpaImpl" />
	</bean>

	<bean id="configRoleRepository" class="org.mockito.Mockito"
		factory-method="mock">
		<constructor-arg
			value="com.francetelecom.clara.cloud.coremodel.ConfigRoleRepository" />
	</bean>

	<bean id="logicalDeploymentCloner" class="org.mockito.Mockito"
		factory-method="mock">
		<constructor-arg
			value="com.francetelecom.clara.cloud.dao.impl.LogicalDeploymentClonerImpl" />
	</bean>

	<bean id="mvnDao" class="org.mockito.Mockito" factory-method="mock">
		<constructor-arg
			value="com.francetelecom.clara.cloud.mvn.consumer.MvnRepoDao" />
	</bean>

	<bean id="manageApplication"
		class="com.francetelecom.clara.cloud.core.service.ManageApplicationImpl" />
	<bean id="manageApplicationRelease"
		class="com.francetelecom.clara.cloud.core.service.ManageApplicationReleaseImpl" />
	<bean id="manageLogicalDeployment"
		class="com.francetelecom.clara.cloud.application.impl.ManageLogicalDeploymentImpl" />
	<bean id="managePaasUser"
		class="com.francetelecom.clara.cloud.core.service.ManagePaasUserImpl" />

	<bean id="manageEnvironment" class="org.mockito.Mockito"
		factory-method="mock">
		<constructor-arg
			value="com.francetelecom.clara.cloud.environment.ManageEnvironment" />
	</bean>

	<bean id="manageStatistics" class="org.mockito.Mockito"
		factory-method="mock">
		<constructor-arg
			value="com.francetelecom.clara.cloud.scalability.ManageStatistics" />
	</bean>

	<bean id="sampleAppProperties"
		class="com.francetelecom.clara.cloud.logicalmodel.samplecatalog.SampleAppProperties" />

	<import resource="classpath:/META-INF/spring/sampleCatalog-context.xml" />

	<import resource="classpath*:services/*-logical-services.xml" />

	<context:component-scan
		base-package="com.francetelecom.clara.cloud.presentation.designer.support" />

	<bean id="splunkBean" class="org.mockito.Mockito" factory-method="mock">
		<constructor-arg
			value="com.francetelecom.clara.cloud.presentation.models.SplunkBean" />
	</bean>

	<bean id="hypericBean" class="org.mockito.Mockito" factory-method="mock">
		<constructor-arg
			value="com.francetelecom.clara.cloud.presentation.models.HypericBean" />
	</bean>

	<!-- alias="authenticationManager" -->
	<bean id="authenticationManager" name="authenticationManager" class="org.mockito.Mockito"
		factory-method="mock" >
		<constructor-arg
			value="org.springframework.security.authentication.AuthenticationManager" />
	</bean>


  <bean id="contactUsBean" class="org.mockito.Mockito" factory-method="mock"  >
        <constructor-arg value="com.francetelecom.clara.cloud.presentation.models.ContactUsBean" />
  </bean>
</beans>