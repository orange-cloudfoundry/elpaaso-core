<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                           http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
                           http://www.springframework.org/schema/context
                           http://www.springframework.org/schema/context/spring-context.xsd">
    <import resource="crash-credentials-context.xml"/>

    <import resource="classpath:/META-INF/spring/mvn-consumer-context.xml"/>
    <import resource="classpath:/META-INF/spring/paas-projection-context.xml"/>
    <import resource="classpath:/META-INF/spring/paas-constraint-context.xml"/>
    <import resource="classpath:/META-INF/spring/sampleCatalog-context.xml" />
    <import resource="classpath:services/*-logical-services.xml" />
    <bean id="logicalDeploymentCloner" class="com.francetelecom.clara.cloud.dao.impl.LogicalDeploymentClonerImpl">
    </bean>

    <!--  maven repo DAO is mocked  -->
    <bean id="mvnDao" class="org.mockito.Mockito" factory-method="mock">
        <constructor-arg value="com.francetelecom.clara.cloud.mvn.consumer.MvnRepoDao" />
    </bean>


    <!-- services mocks context -->
    <context:component-scan base-package="com.francetelecom.clara.cloud.mocks"/>

    <import resource="classpath:META-INF/spring/crash-tool-enabled-context.xml"/>
</beans>
