<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                           http://www.springframework.org/schema/beans/spring-beans-2.5.xsd"
        >

    <bean id="systemPropertyHttpProxyHost" class="org.springframework.beans.factory.config.MethodInvokingFactoryBean">
        <property name="singleton" value="true" />
        <property name="targetClass" value="java.lang.System"/>
        <property name="targetMethod" value="setProperty"/>
        <property name="arguments">
            <list>
                <value>http.proxyHost</value>
                <value>wrong-proxy.yoyo.fr</value><!-- wrong proxy : but good nonProxyHosts -->
            </list>
        </property>
    </bean>
    <bean id="systemPropertyHttpProxyPort" class="org.springframework.beans.factory.config.MethodInvokingFactoryBean">
        <property name="singleton" value="true" />
        <property name="targetClass" value="java.lang.System"/>
        <property name="targetMethod" value="setProperty"/>
        <property name="arguments">
            <list>
                <value>http.proxyPort</value>
                <value>3128</value>
            </list>
        </property>
    </bean>
    <bean id="systemPropertyHttpNonProxyHosts" class="org.springframework.beans.factory.config.MethodInvokingFactoryBean">
        <property name="singleton" value="true" />
        <property name="targetClass" value="java.lang.System"/>
        <property name="targetMethod" value="setProperty"/>
        <property name="arguments">
            <list>
                <value>http.nonProxyHosts</value>
                <value>localhost|*.redacted-domain.org</value>
            </list>
        </property>
    </bean>
</beans>